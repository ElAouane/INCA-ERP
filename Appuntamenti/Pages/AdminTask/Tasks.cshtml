@page
@model Appuntamenti.Pages.AdminTask.TasksModel
@{
    ViewData["Title"] = "Tasks";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br/>
<br />
<div class="container border">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-info">Task Name</h2>
        </div>
        <div class="col-md-6 text-right">
            <a asp-page="Create" class="btn btn-primary mt-1"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
</div>
<div class="container">

    <br />
    <div>
        @if (Model.AdminTasks.Count == 0)
        {
        <div class="alert alert-primary" role="alert">
            No Admin Task Available.
        </div>
        }
        else
        {
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.AdminTasks[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m=> m.AdminTasks[0].Description) 
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach(var item in Model.AdminTasks)
                {
             <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td style="width:150px;">
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white mr-2" asp-page="Edit" asp-route-Id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-success text-white mr-2" asp-page="Details" asp-route-Id="@item.Id">
                            <i class="fas fa-list"></i>
                        </a>
                        <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
             </tr>
                }
            </table>
        }
    </div>
</div>

