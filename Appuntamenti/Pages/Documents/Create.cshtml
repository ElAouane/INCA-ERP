@page
@model Appuntamenti.Pages.Documents.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<form enctype="multipart/form-data" method="post" asp-action="OnPostasync" class="mt-3">
    <div class="container">
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="documentModel.Name" class="col-sm-2 col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="documentModel.Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="documentModel.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="documentModel.Description" class="col-sm-2 col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="documentModel.Description" class="form-control" placeholder="Name..." />
                <span asp-validation-for="documentModel.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="documentCreate.Document" class="col-sm-2 col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="documentCreate.Document" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File..</label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>